<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/application_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="dev.draftine.splash.presentation.view.SplashFragment"
        tools:layout="@layout/splash_fragment">

        <action
            android:id="@+id/actionOpenMain"
            app:destination="@id/main"
            app:popUpTo="@id/application_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/main"
        android:name="dev.draftine.main.presentation.view.MainFragment"
        tools:layout="@layout/main_fragment">

    </fragment>

</navigation>