<?xml version="1.0" encoding="utf-8"?>
<dev.draftine.ui.container.ConstraintContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/keyline_2">

    <dev.draftine.ui.text.TextView
        android:id="@+id/advice_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:padding="@dimen/keyline_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/advice_item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textType="Headline6"
        tools:text="@tools:sample/lorem/random" />

    <dev.draftine.ui.image.ImageView
        android:id="@+id/advice_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/img_buddha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</dev.draftine.ui.container.ConstraintContainer>